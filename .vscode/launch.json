{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome with Extension",
      "runtimeArgs": [
        "--load-extension=${workspaceFolder}/dev-dist",
        "--start-maximized",
        "--disable-extensions-except=${workspaceFolder}/dev-dist"
      ],
      "url": "https://www.ikea.com/cz/cs/shoppingcart/",
      // "url": "https://www.ikea.com/cz/cs/p/vimle-5m-rohova-rozkl-pohovka-s-lenoskou-grann-bomstad-cerna-s79477377/",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "preLaunchTask": "build:dev"
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch Firefox with Extension",
      "reAttach": true,
      "addonPath": "${workspaceFolder}/dev-dist-firefox",
      "url": "https://www.ikea.com/cz/cs/shoppingcart/",
      "webRoot": "${workspaceFolder}/src",
      // "sourceMaps": true,
      "preLaunchTask": "build:dev:firefox"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Puppeteer Tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      },
      "preLaunchTask": "build:dev"
    }    
  ]
}
