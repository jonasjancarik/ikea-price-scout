{
  "manifest_version": 3,
  "name": "IKEA Price Scout",
  "version": "0.5.2",
  "description": "Compare IKEA product prices across 67 countries worldwide. Select your home country and comparison countries for intelligent price comparison.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.ikea.com/*/*",
    "https://*.ikea.cn/*/*",
    "https://www.cnb.cz/*",
    "https://raw.githubusercontent.com/jonasjancarik/ikea-price-scout/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.ikea.com/*/*/p/*",
        "https://*.ikea.com/*/*/shoppingcart/",
        "https://*.ikea.cn/*/*/p/*",
        "https://*.ikea.cn/*/*/shoppingcart/"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*"
      ],
      "matches": [
        "https://*.ikea.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}