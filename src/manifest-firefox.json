{
  "manifest_version": 2,
  "name": "IKEA Price Scout",
  "version": "0.5.1",
  "description": "Compare IKEA product prices across different country websites. Currently works for Czechia only, more countries coming soon.",
  "permissions": [
    "storage",
    "https://*.ikea.com/cz/*",
    "https://www.cnb.cz/*",
    "https://raw.githubusercontent.com/jonasjancarik/ikea-price-scout/*"
  ],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.ikea.com/cz/*/p/*",
        "https://*.ikea.com/cz/*/shoppingcart/"
      ],
      "js": [
        "browser-polyfill.js",
        "content-script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "applications": {
    "gecko": {
      "id": "ikea-price-scout@jonasjancarik.com",
      "strict_min_version": "109.0"
    }
  }
} 